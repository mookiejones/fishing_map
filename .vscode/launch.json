{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome (Vite)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/src",
            "sourceMapPathOverrides": {
                "/*": "${workspaceFolder}/src/*"
            },
            "preLaunchTask": "npm: dev"
        }
    ]
}
