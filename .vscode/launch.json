{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome (Vite)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/src",
            "sourceMapPathOverrides": {
                "/*": "${workspaceFolder}/src/*"
            },
            "preLaunchTask": "npm: dev"
        },
        {
            "name": "Debug Tests (Vitest)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "vitest",
                "--run",
                "--reporter=verbose"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug Current Test File",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "vitest",
                "--run",
                "${relativeFile}"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "cwd": "${workspaceFolder}"
        }
    ]
}
